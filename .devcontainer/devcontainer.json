// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-outside-of-docker-compose
{
	"name": "blockchain-idmgmt",
	"dockerComposeFile": "/Volumes/redcap/tools/docker-env/blockchain-env/bc-dev.yml",
	"service": "bcEnv",
	"workspaceFolder": "/home/heyzack/workspaces/${localWorkspaceFolderBasename}",

	// Use this environment variable if you need to bind mount your local source code into a new container.
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	},

	"mounts": [
		"source=${localWorkspaceFolder},target=/home/heyzack/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"donjayamanne.githistory",
				"mhutchie.git-graph",
				"gruntfuggly.todo-tree",
                "mutantdino.resourcemonitor",
                "trufflesuite-csi.truffle-vscode",
                "juanblanco.solidity",
                "dart-code.flutter"
			]
		}
	}
}
